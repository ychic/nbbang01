<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="nbbang.mybatis.mapper.signup">

	<insert id="memberInsert" parameterType="Map">
		INSERT INTO member
		VALUES(#{email},#{password},#{name},#{nickname},#{birthdate},#{gender},#{tel},'home',
		#{preference, jdbcType=VARCHAR}, #{authority, jdbcType=VARCHAR},SYSDATE,#{oringinprofile, jdbcType=VARCHAR},null)
	</insert>
	
	<select id="selectmemberInfo" parameterType="Map" resultType="com.kosmo.nbbang.service.MemberDTO">
		SELECT * FROM member WHERE email = #{email}
	</select>
</mapper> 