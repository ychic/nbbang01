	<!-- 클래스 별칭 설정 -->	
	  
	<typeAliases>
		<typeAlias type="com.kosmo.nbbang.service.MemberDTO" alias="member"/>
		<typeAlias type="com.kosmo.nbbang.partykang.service.PartyChatDTO" alias="chat"/>
